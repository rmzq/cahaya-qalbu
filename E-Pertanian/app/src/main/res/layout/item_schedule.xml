<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/jamItem"
        android:text="20:00"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/Light"
        android:id="@+id/cardPjdl"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        app:cardCornerRadius="10dp"
        android:outlineSpotShadowColor="@color/Primariy"
        android:layout_marginLeft="60dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hourglass"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                app:tint="#939393" />

            <TextView
                android:id="@+id/lamaKg"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menit"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="30dp" />
        </FrameLayout>

        <TextView
        android:id="@+id/JenisKgtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penyemprotan Pestisida"
        android:padding="10dp"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:id="@+id/tvOtomatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otomatis"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:id="@+id/ibMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:padding="10dp"
            android:src="@drawable/ic_menu"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>